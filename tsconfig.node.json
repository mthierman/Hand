{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["**/*.config.ts"]
}
