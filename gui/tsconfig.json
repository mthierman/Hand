{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["vite/client"],
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "~/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true
    }
}
